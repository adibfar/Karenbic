    <title>@string.Format("{0} | {1}", "Karen Studio", ViewBag.PageTitle)</title>
    <script type="text/javascript" src="/Scripts/public/base"></script>
    <link rel="stylesheet" type="text/css" href="/Styles/publicStyle" />
    <link rel="stylesheet" type="text/css" href="/Styles/public.css" />
    <script>
        $(document).ready(function () {
            $('#navbar ul.menu > li > a').click(function (e) {
                if ($(this).closest('li').find('ul.submenu').length > 0) {
                    $('#navbar ul.menu > li > a').not(this).removeClass('active');
                    $('#navbar ul.submenu').not($(this).closest('li').find('ul.submenu')).hide();

                    $(this).toggleClass('active');
                    $(this).closest('li').find('ul.submenu').slideToggle(300);
                }
                e.stopPropagation();
            });

            $('html').not('#navbar ul.menu > li > a').click(function () {
                $('#navbar ul.menu > li > a').removeClass('active');
                $('#navbar ul.submenu').slideUp(300);
            });

            $('#navbar-mobile #navbar-mobile-arrow').click(function () {
                $('#navbar-mobile-inner').slideToggle(300);
            });
        });
    </script>
    @RenderSection("HeaderSection", false)
</head>
<body>
    <div id="contents">
        <div id="center-content">
            <div class="hidden-xs" id="header">
                <a class="logo" href="/"></a>
                <div class="btn-login"><a class="btn-login-inner" href="/Account/Login">Enter</a></div>
                <div class="btn-register"><a class="btn-register-inner">Register</a></div>
            </div>

            <div class="hidden-xs" id="navbar">
                <img class="bg" src="/Images/Public/3_lg.jpg" />
                <div id="inner-navbar">
                    <ul class="menu">
                        <li><a href="/PriceList">Price List</a></li>
                        <li>
                            <a>Archive</a>
                            <ul class="submenu">
                                <li><a href="/Portfolio/1">Graphic Design</a></li>
                                <li><a href="/Portfolio/2">Photo Industrial</a></li>
                                <li><a href="/Portfolio/3">Multimedia</a></li>
                                <li><a href="/Portfolio/4">Web Design</a></li>
                            </ul>
                        </li>
                        <li><a href="/ContactUs">Contact Us</a></li>
                        <li><a href="/AboutUs">About Us</a></li>
                    </ul>
                </div>
            </div>

            <div class="visible-xs" id="navbar-mobile">
                <div id="navbar-mobile-inner">
                    <a class="logo" href="/"></a>

                    <div class="btn-container">
                        <div class="btn-login"><a class="btn-login-inner" href="/Account/Login">Enter</a></div>
                        <div class="btn-register"><a class="btn-register-inner">Register</a></div>
                    </div>

                    <div class="menu-item menu-item0">
                        <a class="menu-item-inner" href="/PriceList">Price List</a>
                    </div>

                    <div class="menu-item menu-item1">
                        <a class="menu-item-inner" href="/Portfolio">Archive</a>
                    </div>

                    <div class="menu-item menu-item2">
                        <a class="menu-item-inner" href="/ContactUs">Contact Us</a>
                    </div>

                    <div class="menu-item menu-item3">
                        <a class="menu-item-inner" href="/AboutUs">About Us</a>
                    </div>
                </div>
                <div id="navbar-mobile-arrow"></div>
            </div>

            @RenderBody()
        </div>
    </div>
</body>
</html>