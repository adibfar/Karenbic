@{
    Karenbic.DomainClasses.PortfolioType portfolioType = ViewBag.PortfolioType;
    Karenbic.DomainClasses.PortfolioCategory portfolioCategory = ViewBag.PortfolioCategory;

    List<Karenbic.DomainClasses.PortfolioCategory> portfolioCategories = portfolioType.Categories
        .OrderByDescending(x => x.Priority).ToList();

    List<Karenbic.DomainClasses.Portfolio> portfolios = portfolioCategory.Portfolios
        .OrderByDescending(x => x.Priority).ToList();

    ViewBag.PageTitle = string.Format("{0} | {1}", portfolioType.Title, portfolioCategory.Title);
}

@section HeaderSection {
    <style type="text/css">
        .page-content {
            width: 100%;
            padding: 1px 167px 1px 1px;
            position: relative;
        }

        .right-menu {
            height: 464px;
            margin: 0 auto;
            padding: 1px;
            position: absolute;
            right: 0;
            top: 0;
            width: 157px;
        }
            .right-menu .title {
                background: transparent url(/Images/Public/Portfolio/0.jpg) no-repeat 0 0;
                height: 70px;
                position: relative;
                width: 157px;
            }
            .right-menu .title a {
                bottom: 0;
                display: block;
                left: 0;
                position: absolute;
                right: 0;
                top: 0;
            }
            .right-menu .title-1 {
                background: transparent url(/Images/Public/NavbarMenu/SubMenu/1.png) no-repeat 0 0;
                height: 54px;
                position: absolute;
                right: 45px;
                top: 6px;
                width: 75px;
            }
            .right-menu .title-2 {
                background: transparent url(/Images/Public/NavbarMenu/SubMenu/2.png) no-repeat 0 0;
                height: 49px;
                position: absolute;
                right: 32px;
                top: 11px;
                width: 103px;
            }
            .right-menu .title-3 {
                background: transparent url(/Images/Public/NavbarMenu/SubMenu/3.png) no-repeat 0 0;
                height: 37px;
                position: absolute;
                right: 41px;
                top: 16px;
                width: 70px;
            }
            .right-menu .title-4 {
                background: transparent url(/Images/Public/NavbarMenu/SubMenu/4.png) no-repeat 0 0;
                height: 19px;
                position: absolute;
                right: 62px;
                top: 30px;
                width: 38px;
            }
            .right-menu .menu {
                background: transparent url(/Images//Public/Portfolio/1.jpg) no-repeat 0 0;
                height: 358px;
                padding: 1px;
                width: 157px;
            }
                .right-menu .menu ul {
                    margin: 26px 27px 0 13px;
                    padding: 0;
                    list-style: none;
                    text-align: right;
                }
                    .right-menu .menu ul li {
                        margin: 0 0 3px 0;
                        padding: 0;
                        position: relative;
                        list-style: none;
                    }
                        .right-menu .menu ul li a {
                            color: #503e18;
                            cursor: pointer;
                            display: block;
                            font-family: IranianSerifWeb;
                            font-size: 15px;
                            font-weight: bold;
                            padding: 5px 3px 1px 0;
                            position: relative;
                            text-decoration: none;
                            z-index: 6;
                        }
                        .right-menu .menu ul li a:hover + .item-hover-bg {
                            opacity: 1;
					        transition: opacity 300ms ease-in;
                        }
                        .right-menu .menu ul li i {
                            background-color: #503e18;
                            border-radius: 50%;
                            display: inline-block;
                            height: 3px;
                            left: 2px;
                            position: relative;
                            top: -2px;
                            width: 3px;
                        }
                        .right-menu .menu ul li .item-sep {
				            background: transparent url(/Images/Public/navbar-sub-item-sep.png) no-repeat center center;
				            bottom: -13px;
				            height: 15px;
				            position: absolute;
				            right: -6px;
				            top: auto;
				            width: 108px;
				            z-index: 4;
			            }
                        .right-menu .menu ul li .item-hover-bg {
				            background: transparent url(/Images/Public/Portfolio/3.png) no-repeat center center;
				            height: 81px;
                            left: -27px;
				            opacity: 0;
				            position: absolute;
                            top: -26px;
				            transition: opacity 300ms ease-out;
				            width: 167px;
				            z-index: 5;
			            }

        .portfolios {
            position: relative;
            padding: 71px 69px 20px 69px;
        }
            .portfolios .label-left{
                background: transparent url(/Images/Public/1.png) no-repeat 0 0;
                height: 132px;
                left: 0;
                position: absolute;
                top: 0;
                width: 148px;
            }
            .portfolios .label-right{
                background: transparent url(/Images/Public/2.png) no-repeat 0 0;
                height: 132px;
                position: absolute;
                right: 0;
                top: 0;
                width: 148px;
            }
            .portfolios ul {
                list-style: none;
                margin: 0;
                padding: 0;
                text-align:center;
            }
                .portfolios ul li {
                    background-color: #2a3234;
                    border: 2px solid #494949;
                    display: inline-block;
                    height: 156px;
                    margin: 0 0 5px 7px;
                    padding: 3px;
                    width: 204px;
                }
                    .portfolios ul li img {
                        display: block;
                        height: 146px;
                        width: 194px;
                    }

        #cboxTitle {
            font-family: IranianSerifWeb;
            font-size: 15px;
            font-weight: bold;
        }
        #cboxCurrent{
            display: none !important;
        }

        /* Custom, iPhone Retina */
	    @@media only screen and (min-width : 320px) {
            .page-content {
                padding-right: 0;
            }
            .right-menu {
                position: relative;
                right: auto;
            } 
            .portfolios {
                padding-top: 18px;
            }
	    }
	    /* Extra Small Devices, Phones */
	    @@media only screen and (min-width : 480px) {
            .page-content {
                padding-right: 0;
            } 
            .right-menu {
                position: relative;
                right: auto;
            } 
            .portfolios {
                padding-top: 18px;
            }
	    }
	    /* Small Devices, Tablets */
	    @@media only screen and (min-width : 768px) {
            .page-content {
                padding-right: 167px;
            }
            .right-menu {
                position: absolute;
                right: 0;
            } 
            .portfolios {
                padding-top: 71px;
            }
	    }
	    /* Medium Devices, Desktops */
	    @@media only screen and (min-width : 992px){
            .page-content {
                padding-right: 167px;
            }
            .right-menu {
                position: absolute;
                right: 0;
            }
            .portfolios {
                padding-top: 71px;
            } 
	    }
	    /* Large Devices, Wide Screens */
	    @@media only screen and (min-width : 1200px){
		    .page-content {
                padding-right: 167px;
            }
            .right-menu {
                position: absolute;
                right: 0;
            }
            .portfolios {
                padding-top: 71px;
            } 
	    }

    </style>

    <link rel="stylesheet" type="text/css" href="/Vendors/jquery-colorbox/them/colorbox.css" />
    <script type="text/javascript" src="/Vendors/jquery-colorbox/jquery.colorbox-min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.portfolios ul li a').colorbox({
                rel: 'gallery',
                maxWidth: '95%',
                maxHeight: '95%'
            });
        });
    </script>
}

<div id="header-mobile" class="visible-xs">
    <div id="header-mobile-inner">
        <a class="logo" href="/"></a>
        <a class="btn-home" href="/"></a>
        <a class="btn-back" href="/Portfolio/@portfolioType.Id"></a>
    </div>
</div>

<div class="page-content">
    <div class="hidden-xs right-menu">
        <div class="title">
            <a href="/Portfolio/@portfolioType.Id">
                <div class="title-@portfolioType.Id"></div>
            </a>
        </div>
        <div class="menu">
            <ul>
                @foreach (Karenbic.DomainClasses.PortfolioCategory item in portfolioCategories)
                {
                    <li>
                        <a href="@Url.Action("ShowPortfolios", new { typeId = portfolioType.Id, categoryId = item.Id })"><i></i>@item.Title</a>
                        <div class="item-hover-bg"></div>
                        <div class="item-sep"></div>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="portfolios">
        <div class="hidden-xs label-left"></div>
        <div class="hidden-xs label-right"></div>
        <ul>
            @foreach (Karenbic.DomainClasses.Portfolio item in portfolios)
            {
                <li>
                    <a href="@item.PicturePath" title="@item.Description">
                        <img src="@item.TumbPicturePath" />
                    </a>
                </li>
            }
        </ul>
    </div>
</div>