    <script>
        $(document).ready(function () {
            $('#navbar ul.menu > li > a').click(function (e) {
                if ($(this).closest('li').find('.submenu').length > 0) {
                    $('#navbar ul.menu > li > a').not(this).removeClass('active');
                    $('#navbar .submenu').not($(this).closest('li').find('.submenu')).hide();

                    $(this).toggleClass('active');
                    $(this).closest('li').find('.submenu').slideToggle(300);
                }
                e.stopPropagation();
            });

            $('html').not('#navbar ul.menu > li > a').click(function () {
                $('#navbar ul.menu > li > a').removeClass('active');
                $('#navbar .submenu').slideUp(200);
            });

            $('#navbar-mobile #navbar-mobile-arrow').click(function () {
                $('#navbar-mobile-inner').slideToggle(200);
            });
        });
    </script>
    @RenderSection("HeaderSection", false)
</head>
