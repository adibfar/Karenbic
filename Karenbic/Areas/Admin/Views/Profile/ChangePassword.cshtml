<div class="container-fluid">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
            <div class="panel panel-default"
                 ng-class="{'whirl': editLoading, 'shadow': editLoading}">
                <div class="panel-heading">
                    <div class="panel-title">
                        <i></i>
                        تغییر رمز عبور
                    </div>
                </div>
                <div class="panel-body">
                    <form name="editPasswordForm">
                        <div class="form-group">
                            <label class="control-label">رمز عبور جدید:</label>
                            <input type="password" class="form-control ltr" name="newPass"
                                   ng-model="newPass" ng-minlength="6" required="" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">تکرار رمز عبور جدید:</label>
                            <input type="password" class="form-control ltr" name="reNewPass"
                                   ng-model="reNewPass" ng-minlength="6" ng-match="newPass" required="" />
                        </div>
                        <div class="form-group">
                            <div class="clearfix">
                                <div class="pull-left">
                                    <button class="btn btn-labeled btn-warning" type="button"
                                            ng-click="edit()"
                                            ng-class="{'disabled': editPasswordForm.$invalid}"
                                            ng-disabled="editPasswordForm.$invalid">
                                        <span class="btn-label btn-label-right">
                                            <i class="fa fa-pencil"></i>
                                        </span>
                                        ویرایش
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12"></div>
    </div>
</div>

<toaster-container toaster-options="{'position-class': 'toast-bottom-left', 'close-button':true, 'timeout': 3000}"></toaster-container>