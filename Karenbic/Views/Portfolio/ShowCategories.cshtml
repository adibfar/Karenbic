@model Karenbic.DomainClasses.PortfolioType

@{
    ViewBag.PageTitle = Model.Title;
    List<Karenbic.DomainClasses.PortfolioCategory> categories = Model.Categories.OrderByDescending(x => x.Priority).ToList();
}

@section HeaderSection {
    <style type="text/css">
        .page-content {
            width: 100%;
            padding: 1px 167px 1px 1px;
            position: relative;
        }

        .right-menu {
            height: 464px;
            margin: 0 auto;
            padding: 1px;
            position: absolute;
            right: 0;
            top: 0;
            width: 157px;
        }
            .right-menu .title {
                background: transparent url(/Images/Public/Portfolio/0.jpg) no-repeat 0 0;
                height: 70px;
                position: relative;
                width: 157px;
            }
            .right-menu .title a {
                bottom: 0;
                display: block;
                left: 0;
                position: absolute;
                right: 0;
                top: 0;
            }
            .right-menu .title-1 {
                background: transparent url(/Images/Public/NavbarMenu/SubMenu/1.png) no-repeat 0 0;
                height: 54px;
                position: absolute;
                right: 45px;
                top: 6px;
                width: 75px;
            }
            .right-menu .title-2 {
                background: transparent url(/Images/Public/NavbarMenu/SubMenu/2.png) no-repeat 0 0;
                height: 49px;
                position: absolute;
                right: 32px;
                top: 11px;
                width: 103px;
            }
            .right-menu .title-3 {
                background: transparent url(/Images/Public/NavbarMenu/SubMenu/3.png) no-repeat 0 0;
                height: 37px;
                position: absolute;
                right: 41px;
                top: 16px;
                width: 70px;
            }
            .right-menu .title-4 {
                background: transparent url(/Images/Public/NavbarMenu/SubMenu/4.png) no-repeat 0 0;
                height: 19px;
                position: absolute;
                right: 62px;
                top: 30px;
                width: 38px;
            }
            .right-menu .menu {
                background: transparent url(/Images//Public/Portfolio/1.jpg) no-repeat 0 0;
                height: 358px;
                padding: 1px;
                width: 157px;
            }
                .right-menu .menu ul {
                    margin: 26px 27px 0 13px;
                    padding: 0;
                    list-style: none;
                    text-align: right;
                }
                    .right-menu .menu ul li {
                        margin: 0 0 3px 0;
                        padding: 0;
                        position: relative;
                        list-style: none;
                    }
                        .right-menu .menu ul li a {
                            color: #503e18;
                            cursor: pointer;
                            display: block;
                            font-family: IranianSerifWeb;
                            font-size: 15px;
                            font-weight: bold;
                            padding: 5px 3px 1px 0;
                            position: relative;
                            text-decoration: none;
                            z-index: 6;
                        }
                        .right-menu .menu ul li a:hover + .item-hover-bg {
                            opacity: 1;
					        transition: opacity 300ms ease-in;
                        }
                        .right-menu .menu ul li i {
                            background-color: #503e18;
                            border-radius: 50%;
                            display: inline-block;
                            height: 3px;
                            left: 2px;
                            position: relative;
                            top: -2px;
                            width: 3px;
                        }
                        .right-menu .menu ul li .item-sep {
				            background: transparent url(/Images/Public/navbar-sub-item-sep.png) no-repeat center center;
				            bottom: -13px;
				            height: 15px;
				            position: absolute;
				            right: -10px;
				            top: auto;
				            width: 108px;
				            z-index: 4;
			            }
                        .right-menu .menu ul li .item-hover-bg {
				            background: transparent url(/Images/Public/navbar-sub-item-bg.png) no-repeat center center;
				            height: 87px;
                            left: -30px;
				            opacity: 0;
				            position: absolute;
                            top: -30px;
				            transition: opacity 300ms ease-out;
				            width: 180px;
				            z-index: 5;
			            }


        /* Custom, iPhone Retina */
	    @@media only screen and (min-width : 320px) {
            .page-content {
                padding-right: 0;
            }
            .right-menu {
                position: relative;
                right: auto;
            } 
	    }
	    /* Extra Small Devices, Phones */
	    @@media only screen and (min-width : 480px) {
            .page-content {
                padding-right: 0;
            } 
            .right-menu {
                position: relative;
                right: auto;
            } 
	    }
	    /* Small Devices, Tablets */
	    @@media only screen and (min-width : 768px) {
            .page-content {
                padding-right: 167px;
            }
            .right-menu {
                position: absolute;
                right: 0;
            } 
	    }
	    /* Medium Devices, Desktops */
	    @@media only screen and (min-width : 992px){
            .page-content {
                padding-right: 167px;
            }
            .right-menu {
                position: absolute;
                right: 0;
            } 
	    }
	    /* Large Devices, Wide Screens */
	    @@media only screen and (min-width : 1200px){
		    .page-content {
                padding-right: 167px;
            }
            .right-menu {
                position: absolute;
                right: 0;
            } 
	    }
    </style>
}

<div id="header-mobile" class="visible-xs">
    <div id="header-mobile-inner">
        <a class="logo" href="/"></a>
        <a class="btn-home" href="/"></a>
        <a class="btn-back" href="/Portfolio"></a>
    </div>
</div>

<div class="page-content">
    <div class="right-menu">
        <div class="title">
            <a href="/Portfolio/@Model.Id">
                <div class="title-@Model.Id"></div>
            </a>
        </div>
        <div class="menu">
            <ul>
                @foreach (Karenbic.DomainClasses.PortfolioCategory item in categories)
                {
                    <li>
                        <a href="@Url.Action("ShowPortfolios", new { typeId = Model.Id, categoryId = item.Id })"><i></i>@item.Title</a>
                        <div class="item-hover-bg"></div>
                        <div class="item-sep"></div>
                    </li>
                }
            </ul>
        </div>
    </div>

    <img class="hidden-xs" style="display:block;height:auto;margin:40px auto;width:480px;" src="@Model.PicturePath" />
</div>