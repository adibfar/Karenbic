<script type="text/ng-template" id="/SendFinalDesignContent.html">
    <div class="modal-header">
        <div class="modal-title">
            <i></i>
            ارسال فایل نهایی
        </div>
    </div>
    <div class="modal-body" ng-class="{'whirl': fetchLoading || addLoading , 'shadow': fetchLoading || addLoading}">
        <form name="form"
              ng-class="{'from-sumbited': fromSubmited}">
            <div class="final-design-items">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th style="min-width:200px;width:200px;">عنوان</th>
                            <th style="min-width:200px;">لینک</th>
                            <th style="min-width:27px;width:27px;">&nbsp;</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <input type="text" ng-model="newItem.Title" />
                            </td>
                            <td>
                                <input class="ltr" type="text" ng-model="newItem.Link" />
                            </td>
                            <td>
                                <a class="btn-img-add-1"
                                   style="position:relative;top:3px;right:2px;"
                                   ng-click="addItem()"></a>
                            </td>
                        </tr>
                        <tr ng-repeat="item in items">
                            <td>
                                <input type="text" ng-model="item.Title" />
                            </td>
                            <td>
                                <input class="ltr" type="text" ng-model="item.Link" required="" />
                            </td>
                            <td>
                                <a class="btn-img-delete-2"
                                   style="position:relative;top:4px;right:4px;"
                                   ng-click="removeItem($index)"></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </form>
    </div>
    <div class="modal-footer">
        <div class="clearfix">
            <div class="pull-left">
                <button class="btn btn-labeled btn-default"
                        ng-click="close()">
                    <span class=" btn-label btn-label-right">
                        <i class="fa fa-times"></i>
                    </span>
                    خروج
                </button>
                <button class="btn btn-labeled btn-warning" type="button"
                        ng-click="save()">
                    <span class="btn-label btn-label-right">
                        <i class="fa fa-pencil"></i>
                    </span>
                    ثبت
                </button>
            </div>
        </div>
    </div>
</script>
<!-- End Send Design Order Modal -->

