<div class="container-fluid" ng-if="item.type == 1">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-group"
                 style="margin-bottom:6px;">
                <label class="control-label">
                    {{item.data.title + ':'}}
                    <span class="text-danger" ng-if="item.data.isRequired">*</span>
                </label>
                <textarea class="form-control"
                          style="resize:none;overflow:hidden;height:{{item.data.height}}px;"
                          ng-model="item.value"></textarea>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"
             ng-if="item.data.description != null && item.data.description != ''">
            <div class="form-group">
                <span class="fa fa-info-circle text-info"></span>
                <pre class="control-label">{{item.data.description}}</pre>
            </div>
        </div>
    </div>
</div>