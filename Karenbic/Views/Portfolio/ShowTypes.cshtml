@{
    ViewBag.PageTitle = "آرشیو نمونه ها";
}

@section HeaderSection {
    <style type="text/css">
        .page-content {
            margin-top: 20px;
            padding-right: 164px;
            position: relative;
            width: 100%;
        }

        .portfolio-menu {
            background: transparent url(/Images/PublicMobile/portfolio-menu-bar.jpg) no-repeat 0 0;
            height: 360px;
            margin: 0 auto;
            padding: 1px;
            position: absolute;
            right: 0;
            top: 0;
            width: 154px;
        }

        .portfolio-menu-title {
            background: transparent url(/Images/PublicMobile/portfolio-menu-title.jpg) no-repeat 0 0;
            height: 62px;
            padding: 1px;
            width: 154px;
        }
            .portfolio-menu-title .portfolio-menu-title-inner {
                background: transparent url(/Images/PublicMobile/MenuItem/item0_text.png) no-repeat 22px 10px;
                cursor: pointer;
			    display: block;
			    height: 55px;
			    margin: 2px 11px 1px 1px; 
            }

        .portfolio-menu-bar {
            background: transparent url(/Images/PublicMobile/portfolio-menu-bar.jpg) no-repeat 0 0;
            height: 298px;
            padding: 1px;
            width: 154px;
        }
            .portfolio-menu-bar ul {
                margin: 30px 30px 0 23px;
                padding: 0;
                list-style: none;
                text-align: center;
            }
                .portfolio-menu-bar ul li {
                    display: block;
                    list-style: none;
			        height: 49px;
			        margin: 0;
                    padding: 0;
			        position: relative;
			        width: 100%;
                }
                    .portfolio-menu-bar ul li a {
                        cursor: pointer;
                        display: block;
				        height: 68px;
                        position: relative;
				        width: 100%;
                    }
                        .portfolio-menu-bar ul li a:hover {
                            text-decoration: none;
                        }
                        .portfolio-menu-bar ul li a:hover + .item-hover-bg  {
					        opacity: 1;
					        transition: opacity 300ms ease-in;
				        }
			            .portfolio-menu-bar ul li .item-sep {
				            background: transparent url(/Images/PublicMobile/portfolio-menu-sep.png) no-repeat center center;
				            bottom: -7px;
				            height: 14px;
				            position: absolute;
				            right: 5px;
				            top: auto;
				            width: 97px;
				            z-index: 8;
			            }

                .portfolio-menu-bar ul li.item1 {
                    height: 49px;
                }
                    .portfolio-menu-bar ul li.item1 a {
                        background: transparent url(/Images/PublicMobile/SubMenuItem/1.png) no-repeat center right;
					    height: 49px;
					    top: -3px;
                    }

                .portfolio-menu-bar ul li.item2 {
                    height: 44px;
                }
                    .portfolio-menu-bar ul li.item2 a {
                        background: transparent url(/Images/PublicMobile/SubMenuItem/2.png) no-repeat center right;
					    height: 44px;
					    right: 11px;
					    top: -5px;
                    }

                .portfolio-menu-bar ul li.item3 {
                    height: 40px;
                }
                    .portfolio-menu-bar ul li.item3 a {
                        background: transparent url(/Images/PublicMobile/SubMenuItem/3.png) no-repeat center right;
					    height: 33px;
					    top: 0;
                    }

                .portfolio-menu-bar ul li.item4 {
                    height: 54px;
                }
                    .portfolio-menu-bar ul li.item4 a {
                        background: transparent url(/Images/PublicMobile/SubMenuItem/4.png) no-repeat center right;
					    height: 17px;
					    right: 12px;
					    top: 14px;
                    }

        /* Custom, iPhone Retina */
	    @@media only screen and (min-width : 320px) {
            .page-content {
                padding-right: 0;
            } 
		    .portfolio-menu {
                right: auto;
                position: relative;
                top: auto;
            }
	    }
	    /* Extra Small Devices, Phones */
	    @@media only screen and (min-width : 480px) {
            .page-content {
                padding-right: 0;
            } 
		    .portfolio-menu {
                right: auto;
                position: relative;
                top: auto;
            }
	    }
	    /* Small Devices, Tablets */
	    @@media only screen and (min-width : 768px) {
            .page-content {
                padding-right: 164px;
            } 
		    .portfolio-menu {
                right: 0;
                position: absolute;
                top: 0;
            }
	    }
	    /* Medium Devices, Desktops */
	    @@media only screen and (min-width : 992px){
            .page-content {
                padding-right: 164px;
            } 
		    .portfolio-menu {
                right: 0;
                position: absolute;
                top: 0;
            }
	    }
	    /* Large Devices, Wide Screens */
	    @@media only screen and (min-width : 1200px){
		    .page-content {
                padding-right: 164px;
            }    
            .portfolio-menu {
                right: 0;
                position: absolute;
                top: 0;
            }
	    }
    </style>
}

<div class="page-content">
    <div class="portfolio-menu">
        <div class="portfolio-menu-title">
            <a class="portfolio-menu-title-inner"></a>
        </div>

        <div class="portfolio-menu-bar">
            <ul>
                <li class="item1">
                    <a href="/Portfolio/1"></a>
                    <div class="item-sep"></div>
                </li>
                <li class="item2">
                    <a href="/Portfolio/2"></a>
                    <div class="item-sep"></div>
                </li>
                <li class="item3">
                    <a href="/Portfolio/3"></a>
                    <div class="item-sep"></div>
                </li>
                <li class="item4">
                    <a href="/Portfolio/4"></a>
                </li>
            </ul>
        </div>
    </div>
</div>