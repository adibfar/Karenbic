<div class="container-fluid" ng-if="item.type == 3">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="form-group"
                    style="margin-bottom:6px;">
                <label class="control-label">
                    {{item.data.title + ':'}}
                    <span class="text-danger" ng-if="item.data.isRequired">*</span>
                </label>
                <div class="input-group"
                     colorpicker=""
                     ng-model="item.value">
                    <input type="text"
                           class="form-control"
                           style="direction:ltr;"
                           ng-model="item.value" />
                    <span class="input-group-addon"
                          style="padding:0 5px;">
                        <i style="position:relative;top:3px;"></i>
                    </span>
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"
                ng-if="item.data.description != null && item.data.description != ''">
            <div class="form-group">
                <span class="fa fa-info-circle text-info"></span>
                <pre class="control-label text-muted">{{item.data.description}}</pre>
            </div>
        </div>
    </div>
</div>