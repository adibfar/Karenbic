@model List<Karenbic.DomainClasses.PortfolioType>

@{
    ViewBag.PageTitle = "Portfolio";
}

@section HeaderSection {
    <style type="text/css">
        .page-content {
            margin-top: 20px;
            padding-left: 164px;
            position: relative;
            width: 100%;
        }

        .portfolio-menu-bar {
            background: transparent url(/Images/PublicMobile/portfolio-menu-bar.jpg) no-repeat 0 0;
            height: 250px;
            left: 0;
            margin: 0 auto;
            padding: 1px;
            position: absolute;
            top: 0;
            width: 154px;
        }
            .portfolio-menu-bar ul {
                margin: 99px 30px 0 23px;
                padding: 0;
                list-style: none;
                text-align: center;
            }
                .portfolio-menu-bar ul li {
                    color: #fff;
                    font-family: Calibri;
                    font-size: 15px;
                    font-weight: bold;
                    margin: 0 0 10px 0;
                    padding: 0;
                    list-style: none;
                }
                    .portfolio-menu-bar ul li a {
                        color: #fff;
                        cursor: pointer;
                        display: block;
                        transition: all 300ms ease-out;
                    }
                        .portfolio-menu-bar ul li a:hover {
                            text-decoration: none;
                            text-shadow: 0 0 6px #fff;
                            transition: all 300ms ease-in;
                        }

        /* Custom, iPhone Retina */
	    @@media only screen and (min-width : 320px) {
            .page-content {
                padding-left: 0;
            } 
		    .portfolio-menu-bar {
                left: auto;
                position: relative;
                top: auto;
            }
	    }
	    /* Extra Small Devices, Phones */
	    @@media only screen and (min-width : 480px) {
            .page-content {
                padding-left: 0;
            } 
		    .portfolio-menu-bar {
                left: auto;
                position: relative;
                top: auto;
            }
	    }
	    /* Small Devices, Tablets */
	    @@media only screen and (min-width : 768px) {
            .page-content {
                padding-left: 164px;
            } 
		    .portfolio-menu-bar {
                left: 0;
                position: absolute;
                top: 0;
            }
	    }
	    /* Medium Devices, Desktops */
	    @@media only screen and (min-width : 992px){
            .page-content {
                padding-left: 164px;
            } 
		    .portfolio-menu-bar {
                left: 0;
                position: absolute;
                top: 0;
            }
	    }
	    /* Large Devices, Wide Screens */
	    @@media only screen and (min-width : 1200px){
		    .page-content {
                padding-left: 164px;
            }    
            .portfolio-menu-bar {
                left: 0;
                position: absolute;
                top: 0;
            }
	    }
    </style>
}

<div class="page-content">
    <div class="portfolio-menu-bar">
        <ul>
            @foreach (Karenbic.DomainClasses.PortfolioType item in Model)
            {
                <li>
                    <a href="@Url.Action("ShowCategories", new { typeId = item.Id })">@item.Title</a>
                </li>
            }
        </ul>
    </div>
</div>